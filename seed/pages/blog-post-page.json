{
    "doc_id": 102,
    "version": 1385717720,
    "publish_datetime": 1385717720,
    "create_datetime": 1385717720,
    "created_by": "sunitparekh",
    "locale": "en_US",

    "state": "published",
    "latest": true,

    "meta": {
        "model": "posts"
    },

    "layout": {
        "type": "slim",
        "name": "bootstrap/left-sidebar"
    },

    "areas": [
        {
            "name": "header",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "url" : "/schemaless/name/navigation",
                            "return": "navigation"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/navigation"
                    }
                }
            ]
        },
        {
            "name": "sidebar",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "model": "#{context.model_name}",
                            "match": {
                                "slug": "#{context.slug}"
                            },
                            "return": "sidebar-document"
                        },
                        {
                            "type": "post-processor",
                            "processor" : "SoupCMS::Core::Processor::NokogiriTOC",
                            "config" : {
                                "toc_for" : "#{data['sidebar-document'][0]['content']['value']}",
                                "levels" : ["h2","h3"]
                            },
                            "return": "table-of-content"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/table-of-content"
                    }
                }
            ]
        },
        {
            "name": "body",
            "modules": [
                {
                    "recipes": [
                        {
                            "type": "soupcms-api",
                            "url": "/#{context.model_name}/slug/#{context.slug}",
                            "return": "article"
                        }
                    ],
                    "template": {
                        "type": "slim",
                        "name": "bootstrap/article"
                    }
                }
            ]
        }
    ]


}