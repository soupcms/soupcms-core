doctype
html lang="en"
  head
    meta charset="utf-8"
    meta content="width=device-width, initial-scale=1.0" name="viewport"

    = page.include_stylesheets

    - if areas['meta']
      .header
        = areas['meta'].html

    - if page['title']
      title = page['title']

  body
    - if areas['header']
      .header
        = areas['header'].html

    - if areas['body']
      .body
        = areas['body'].html

    - if areas['footer']
      .footer
        = areas['footer'].html

    = page.include_javascripts
